DoNothing(Idle)
{
  * (Idle) :
  | True ? : (Idle)
}

Player1(Normal)
{
  * (Normal) :
  | Key(FU) ? Turn(N);Move(F) : (Normal)
  | Key(FD) ? Turn(S);Move(F) : (Normal)
  | Key(FR) ? Turn(E);Move(F) : (Normal)
  | Key(FL) ? Turn(W);Move(F) : (Normal)
  | Key(m)  ? Egg()   : (Robot)
  | Key(l)  ?         : (Metamorph)
  | True    ? Wait()  : (Normal)

  * (Robot) :
  | Key(FU) ? Move(N) : (Robot)
  | Key(FD) ? Move(S) : (Robot)
  | Key(FR) ? Move(E) : (Robot)
  | Key(FL) ? Move(W) : (Robot)
  | Key(m)  ?         : (Normal)
  | True    ? Wait()  : (Robot)

  * (Metamorph):
  | Key(FU) ? Move(N) : (Metamorph)
  | Key(FD) ? Move(S) : (Metamorph)
  | Key(FR) ? Move(E) : (Metamorph)
  | Key(FL) ? Move(W) : (Metamorph)
  | Key(l)  ?         : (Normal)
  | True    ? Wait()  : (Metamorph)
}

